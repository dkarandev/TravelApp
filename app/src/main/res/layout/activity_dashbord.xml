<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:openDrawer="start"
    android:id="@+id/drawerlayout"
    android:orientation="vertical"
    tools:context=".DashbordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="@dimen/_40sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="#366980">

    <ImageView
        android:id="@+id/imgmenu"
        android:layout_width="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_gravity="center_vertical"
        android:layout_height="@dimen/_20sdp"
        android:background="@drawable/menu"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
    </LinearLayout>

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>




    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="@dimen/_230sdp"
        android:layout_gravity="start"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#366980"
                android:orientation="vertical"
                android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/selecteimage"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="100dp"
                android:src="@drawable/plus"/>

                <TextView
                    android:id="@+id/txtusername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Email"/>

                <TextView
                    android:id="@+id/txtuserAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UserAdmin"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linhome"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/home"/>

            <TextView
                android:id="@+id/txthome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_15ssp"
                android:text="Home"
                android:textStyle="bold"
                android:textColor="#366980"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#447287"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"/>
        <LinearLayout
            android:id="@+id/linprofile"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/user"/>

            <TextView
                android:layout_width="match_parent"
                android:textSize="@dimen/_15ssp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Profile"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#366980"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#447287"/>

        <LinearLayout
            android:id="@+id/linprivacy"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/privcypolicy"/>


            <TextView
                android:id="@+id/txtprivcypolicy"
                android:textSize="@dimen/_15ssp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Privacy Policy"
                android:textStyle="bold"
                android:textColor="#366980"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#447287"/>

            <LinearLayout
                android:id="@+id/linrate"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/rate"/>

                <TextView
                android:layout_width="match_parent"
                    android:textSize="@dimen/_15ssp"
                    android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Rate the App"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#366980"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#447287"/>


            <LinearLayout
                android:id="@+id/linshare"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/share"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15ssp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="Share with Firend"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#366980"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#447287"/>

            <LinearLayout
                android:id="@+id/linsetting"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/setting"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_15ssp"
                android:layout_gravity="center"
                android:text="Setting"
                android:textStyle="bold"
                android:textColor="#366980"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#447287"/>

            <TextView
                android:id="@+id/txtlogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:textSize="@dimen/_15ssp"
                android:layout_gravity="center"
                android:text="Logut"
                android:textStyle="bold"
                android:textColor="#366980"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/txtversionname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15ssp"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:text="Version Name:-"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#366980"/>

                    <TextView
                        android:id="@+id/txtversioncode"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15ssp"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:text="Version Code:-"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#366980"/>


                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>